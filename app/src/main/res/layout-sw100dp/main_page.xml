<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ContainerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shsid.bktronze.cac.ZoomLayout
        android:id="@+id/mainMapZoomView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/ContentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cac_current_map" />

            <TextView
                style="@style/MapNumberButtonStyle"
                android:id="@+id/btn1Gate"
                android:layout_marginTop="56dp"
                android:layout_marginStart="450dp"
                android:text="@string/btnIndexGate" />

            <TextView
                style="@style/MapNumberButtonStyle"
                android:id="@+id/btn2Art"
                android:layout_marginTop="84sp"
                android:layout_marginStart="434dp"
                android:text="@string/btnIndexArt" />

            <TextView
                style="@style/MapNumberButtonStyle"
                android:id="@+id/btn3Cafe"
                android:text="@string/btnIndexCafe"
                android:layout_marginTop="84sp"
                android:layout_marginStart="373sp" />

            <TextView
                style="@style/MapNumberButtonStyle"
                android:id="@+id/btn9Finance"
                android:layout_marginTop="150dp"
                android:layout_marginStart="450dp"
                android:text="@string/btnIndexFinance" />

            <TextView
                style="@style/MapNumberButtonStyle"
                android:id="@+id/btn7Longmian"
                android:layout_marginTop="211dp"
                android:layout_marginStart="403dp"
                android:text="@string/btnIndexLongMian" />

            <TextView
                style="@style/MapNumberButtonStyle"
                android:id="@+id/btn8Xianmian"
                android:layout_marginTop="234dp"
                android:layout_marginLeft="430dp"
                android:text="@string/btnIndexXianMian" />

            <TextView
                style="@style/MapNumberButtonStyle"
                android:id="@+id/btn5Pool"
                android:layout_marginTop="144dp"
                android:layout_marginStart="310sp"
                android:text="@string/btnIndexPool" />

            <TextView
                style="@style/MapNumberButtonStyle"
                android:id="@+id/btn4Barracks"
                android:layout_marginTop="100dp"
                android:layout_marginStart="194dp"
                android:text="@string/btnIndexBarracks"/>

            <TextView
                style="@style/MapNumberButtonStyle"
                android:id="@+id/btn6Assembly"
                android:layout_marginTop="183sp"
                android:layout_marginStart="400sp"
                android:text="@string/btnIndexAssembly"/>

            <Button
                style="@style/MapBorderButtonStyle"
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:text="@string/main_btnJG"
                android:id="@+id/mainBtnJG"
                android:layout_alignParentEnd="true" />

            <Button
                style="@style/MapBorderButtonStyle"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="@string/main_btnList"
                android:id="@+id/mainBtnList"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/mainBtnJG"
                android:layout_alignEnd="@+id/mainBtnAbout" />

            <Button
                style="@style/MapBorderButtonStyle"
                android:layout_width="55sp"
                android:layout_height="50sp"
                android:text="@string/main_btnBettyBarr"
                android:id="@+id/mainBtnBettyBarr"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <Button
                style="@style/MapBorderButtonStyle"
                android:text="@string/main_btnAbout"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/mainBtnAbout"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <Button
                style="@style/MapBorderButtonStyle"
                android:layout_width="65sp"
                android:layout_height="50sp"
                android:text="@string/main_btnCredits"
                android:id="@+id/mainBtnCredits"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </com.shsid.bktronze.cac.ZoomLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

    </LinearLayout>

</FrameLayout>